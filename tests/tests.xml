<?xml version="1.0" encoding="UTF-8"?>
<testdefinition version="1.0">
   <suite name="jolla-notes-tests" domain="ui">
       <description>Jolla Notes automatic tests</description>
       <set name="feature-tests" feature="Jolla Notes">
           <description>Collection of Jolla Notes tests</description>
           <case manual="false" name="first note">
               <step>/opt/tests/jolla-notes/runtest tst_first_note</step>
               <step>/opt/tests/jolla-notes/runtest tst_first_note_saved</step>
           </case>
           <case manual="false" name="context menu">
               <step>/opt/tests/jolla-notes/runtest tst_contextmenu</step>
           </case>
           <case manual="false" name="cover page">
               <step>/opt/tests/jolla-notes/runtest tst_cover</step>
           </case>
           <case manual="false" name="note deletion">
               <step>/opt/tests/jolla-notes/runtest tst_delete</step>
           </case>
           <case manual="false" name="overview page">
               <step>/opt/tests/jolla-notes/runtest tst_grid</step>
           </case>
           <case manual="false" name="note emptying">
               <step>/opt/tests/jolla-notes/runtest tst_no_save_empty</step>
           </case>
           <case manual="false" name="create multiple notes">
               <step>/opt/tests/jolla-notes/runtest tst_create_several_notes</step>
           </case>
           <case manual="false" name="select another note during remorse timer">
               <step>/opt/tests/jolla-notes/runtest tst_delete_during_remorse</step>
           </case>
       </set>
   </suite>
</testdefinition>
